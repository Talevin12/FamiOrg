<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.EventEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/createEvent_LBL_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/createEvent_ET_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_corners_rectangle"
            android:hint="Event Title"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#83000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/createEvent_ET_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_corners_rectangle"
            android:hint="Event description"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#83000000"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createEvent_BTN_startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="@color/gray"
            android:padding="10dp"
            android:text="Pick Start Time"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createEvent_BTN_endTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="@color/gray"
            android:enabled="false"
            android:padding="10dp"
            android:text="Pick End Time"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/createEvent_MULTI_CHOICE_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:drawablePadding="16dp"
            android:hint="Select Family Members Related"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="#83000000"
            android:textSize="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createEvent_BTN_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/gray"
            android:onClick="saveEventAction"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>