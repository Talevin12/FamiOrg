<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".activities.ShoppingListActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shoppingList_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shopping_list_background2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shoppingList_LST_groceries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/shoppingList_BTN_add" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shoppingList_BTN_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#AED7A4"
        app:icon="@drawable/ic_plus"
        app:iconGravity="textStart"
        app:iconTint="@color/white" />


</RelativeLayout>